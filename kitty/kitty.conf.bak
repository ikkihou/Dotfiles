# BEGIN_KITTY_THEME
# Catppuccin-Frappe
include current-theme.conf
# END_KITTY_THEME
#

# Cursor
# cursor                          #dc8a78

# Fonts
font_family                     JetBrainsMonoNL Nerd Font
# font_family                     FiraCode Nerd Font Propo
# font_family                     MesloLGM Nerd Font Propo
# bold_font                       JetBrainsMonoNL Nerd Font Bold
# italic_font                     JetBrainsMonoNL Nerf Font Italic
# bold_italic_font                JetBrainsMonoNL Nerd Font Medium Italic
font_size                       13.0
text_composition_strategy       platform

# Window_layout
draw_minimal_borders            yes
inactive_text_alpha             0.7
hide_window_decorations         titlebar-only
enabled_layouts                 splits 
window_border_width             0.2px
window_margin_width             0.5
window_padding_width            2 5 2
enable_audio_bell               yes
remember_window_size            yes
initial_window_width            170
initial_window_height           50

# Editor
editor                          nvim


background_opacity              0.80
background_blur                 25
background_image_layout         cscaled
# macos_titlebar_color            dark
# active_border_color             none


# Tab bar styles
tab_bar_edge                    top
tab_title_template              "{fmt.fg.#a9b665}{title}"
active_tab_title_template       "{fmt.fg.white}{title}"
tab_bar_style                   slant
tab_bar_edge                    bottom
tab_bar_margin_width            0.0
tab_bar_margin_height           0.0 0.0
tab_bar_style                   powerline
tab_bar_align                   left
tab_bar_min_tabs                2
tab_switch_strategy             previous
tab_fade                        0.25 0.5 0.75 1
tab_separator                   " ┇"
tab_powerline_style             slanted
tab_activity_symbol             none
tab_title_template              "{f'{title[:30]}…' if title.rindex(title[-1]) + 1 > 30 else (title.center(6) if (title.rindex(title[-1]) + 1) % 2 == 0 else title.center(5))}"
active_tab_title_template       none
active_tab_font_style           bold-italic
inactive_tab_font_style         normal

scrollback_lines                4000
copy_on_select                  yes
